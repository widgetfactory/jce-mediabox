<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system" method="upgrade">
    <name>System - JCE MediaBox</name>
    <author>Ryan Demmer</author>
    <creationDate>@@date@@</creationDate>
    <copyright>@@copyright@@</copyright>
    <license>@@licence@@</license>
    <authorEmail>@@email@@</authorEmail>
    <authorUrl>www.joomlacontenteditor.net</authorUrl>
    <version>@@version@@</version>
    <description>PLG_SYSTEM_JCEMEDIABOX_XML_DESC</description>

    <params addpath="/plugins/system/jcemediabox/elements">
        <param name="theme" type="list" default="standard" label="PLG_SYSTEM_JCEMEDIABOX_THEME" description="PLG_SYSTEM_JCEMEDIABOX_THEME_DESC">
            <option value="standard">PLG_SYSTEM_JCEMEDIABOX_THEME_STANDARD</option>
            <option value="light">PLG_SYSTEM_JCEMEDIABOX_THEME_LIGHT</option>
            <option value="shadow">PLG_SYSTEM_JCEMEDIABOX_THEME_SHADOW</option>
            <option value="squeeze">PLG_SYSTEM_JCEMEDIABOX_THEME_SQUEEZE</option>
            <option value="bootstrap">PLG_SYSTEM_JCEMEDIABOX_THEME_BOOTSTRAP</option>
            <option value="uikit">PLG_SYSTEM_JCEMEDIABOX_THEME_UIKIT</option>
        </param>

        <param name="mediafallback" type="radio" default="0" label="PLG_SYSTEM_JCEMEDIABOX_MEDIAFALLBACK" description="PLG_SYSTEM_JCEMEDIABOX_MEDIAFALLBACK_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>

        <param name="mediaselector" type="text" size="50" default="audio,video" label="PLG_SYSTEM_JCEMEDIABOX_MEDIASELECTOR" description="PLG_SYSTEM_JCEMEDIABOX_MEDIASELECTOR_DESC"/>

        <param name="fadespeed" type="text" default="500" label="PLG_SYSTEM_JCEMEDIABOX_FADESPEED" description="PLG_SYSTEM_JCEMEDIABOX_FADESPEED_DESC"/>
        <param name="scalespeed" type="text" default="500" label="PLG_SYSTEM_JCEMEDIABOX_SCALESPEED" description="PLG_SYSTEM_JCEMEDIABOX_SCALESPEED_DESC"/>
        <param name="overlay" type="radio" default="1" label="PLG_SYSTEM_JCEMEDIABOX_OVERLAY" description="PLG_SYSTEM_JCEMEDIABOX_OVERLAY_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="overlayopacity" type="list" default="0.8" label="PLG_SYSTEM_JCEMEDIABOX_OVERLAYOPACITY" description="PLG_SYSTEM_JCEMEDIABOX_OVERLAYOPACITY_DESC">
            <option value="0">0</option>
            <option value="0.1">0.1</option>
            <option value="0.2">0.2</option>
            <option value="0.3">0.3</option>
            <option value="0.4">0.4</option>
            <option value="0.5">0.5</option>
            <option value="0.6">0.6</option>
            <option value="0.7">0.7</option>
            <option value="0.8">0.8</option>
            <option value="0.9">0.9</option>
            <option value="1">1</option>
        </param>
        <param name="overlaycolor" type="text" default="#000000" class="color" label="PLG_SYSTEM_JCEMEDIABOX_OVERLAYCOLOR" description="PLG_SYSTEM_JCEMEDIABOX_OVERLAYCOLOR_DESC" />
        <param name="width" type="text" default="" label="PLG_SYSTEM_JCEMEDIABOX_WIDTH" description="PLG_SYSTEM_JCEMEDIABOX_WIDTH_DESC" />
        <param name="height" type="text" default="" label="PLG_SYSTEM_JCEMEDIABOX_HEIGHT" description="PLG_SYSTEM_JCEMEDIABOX_HEIGHT_DESC" />
        <param name="resize" type="radio" default="1" label="PLG_SYSTEM_JCEMEDIABOX_RESIZE" description="PLG_SYSTEM_JCEMEDIABOX_RESIZE_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="close" type="list" default="2" label="PLG_SYSTEM_JCEMEDIABOX_CLOSE_ACTION" description="PLG_SYSTEM_JCEMEDIABOX_CLOSE_ACTION_DESC">
            <option value="1">PLG_SYSTEM_JCEMEDIABOX_CLOSE_BUTTON</option>
            <option value="2">PLG_SYSTEM_JCEMEDIABOX_CLOSE_BUTTON_OVERLAY</option>
        </param>
        <param name="icons" type="radio" default="1" label="PLG_SYSTEM_JCEMEDIABOX_ICONS" description="PLG_SYSTEM_JCEMEDIABOX_ICONS_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="hideobjects" type="radio" default="0" label="PLG_SYSTEM_JCEMEDIABOX_HIDEOBJECTS" description="PLG_SYSTEM_JCEMEDIABOX_HIDEOBJECTS_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="scrolling" type="radio" default="fixed" label="PLG_SYSTEM_JCEMEDIABOX_SCROLLPOSITION" description="PLG_SYSTEM_JCEMEDIABOX_SCROLLPOSITION_DESC">
            <option value="scroll">PLG_SYSTEM_JCEMEDIABOX_SCROLL</option>
            <option value="fixed">PLG_SYSTEM_JCEMEDIABOX_FIXED</option>
        </param>
        <param name="components" type="text" size="50" default="" label="PLG_SYSTEM_JCEMEDIABOX_COMPONENTS" description="PLG_SYSTEM_JCEMEDIABOX_COMPONENTS_DESC" />
        <param name="menu" type="menuitemlegacy" state="1" multiple="multiple" size="10" default="" label="PLG_SYSTEM_JCEMEDIABOX_MENU" description="PLG_SYSTEM_JCEMEDIABOX_MENU_DESC" />
        <param name="menu_exclude" type="menuitemlegacy" state="1" multiple="multiple" size="10" default="" label="PLG_SYSTEM_JCEMEDIABOX_MENU_EXCLUDE" description="PLG_SYSTEM_JCEMEDIABOX_MENU_EXCLUDE_DESC" />
        <param name="dynamic_themes" type="radio" default="0" label="PLG_SYSTEM_JCEMEDIABOX_DYNAMICTHEMES" description="PLG_SYSTEM_JCEMEDIABOX_DYNAMICTHEMES_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="legacy" type="radio" default="0" label="PLG_SYSTEM_JCEMEDIABOX_LEGACY" description="PLG_SYSTEM_JCEMEDIABOX_LEGACY_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="lightbox" type="radio" default="0" label="PLG_SYSTEM_JCEMEDIABOX_LIGHTBOX" description="PLG_SYSTEM_JCEMEDIABOX_LIGHTBOX_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="shadowbox" type="radio" default="0" label="PLG_SYSTEM_JCEMEDIABOX_SHADOWBOX" description="PLG_SYSTEM_JCEMEDIABOX_SHADOWBOX_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="cookie_expiry" type="text" size="5" default="" label="PLG_SYSTEM_JCEMEDIABOX_COOKIE_EXPIRY" description="PLG_SYSTEM_JCEMEDIABOX_COOKIE_EXPIRY_DESC" />
    </params>

    <files folder="plugins/system/jcemediabox">
        <file plugin="jcemediabox">jcemediabox.php</file>
        <folder>elements</folder>
        <folder>css</folder>
        <folder>fonts</folder>
        <folder>img</folder>
        <folder>js</folder>
        <folder>mediaplayer</folder>
    </files>

    <languages folder="administrator/language/en-GB">
        <language tag="en-GB">en-GB.plg_system_jcemediabox.ini</language>
    </languages>

</install>
